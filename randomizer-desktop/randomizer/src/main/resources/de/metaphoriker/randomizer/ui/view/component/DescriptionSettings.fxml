<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" prefHeight="488.0" prefWidth="140.0" styleClass="action-settings"
      xmlns="http://javafx.com/javafx/22"
      fx:controller="de.metaphoriker.randomizer.ui.view.component.DescriptionSettingsController">
    <children>
        <VBox fx:id="actionSettingsVBox" minHeight="488.0" minWidth="140.0" styleClass="action-settings-vbox">
            <children>
                <Label fx:id="actionInFocusLabel" styleClass="action-in-focus-label" text="Description"/>
                <Separator prefWidth="140.0"/>
                <VBox prefWidth="140.0" styleClass="action-time-frame-vbox">
                    <children>
                        <Label styleClass="time-frame-description" text="Set the description of the ActionSequence"
                               wrapText="true"/>
                        <TextArea fx:id="textArea" prefHeight="200.0" prefWidth="200.0" promptText="Set the description"
                                  wrapText="true"/>
                        <VBox alignment="BOTTOM_RIGHT" prefHeight="45.0" prefWidth="140.0">
                            <children>
                                <Button mnemonicParsing="false" onAction="#onApply" text="Apply"/>
                            </children>
                        </VBox>
                    </children>
                </VBox>
                <Separator prefWidth="140.0"/>
            </children>
        </VBox>
    </children>
</VBox>
