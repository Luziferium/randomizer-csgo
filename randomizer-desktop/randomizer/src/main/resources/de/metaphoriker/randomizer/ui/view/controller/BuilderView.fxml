<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/22"
            fx:controller="de.metaphoriker.randomizer.ui.view.controller.BuilderViewController">
    <children>
        <HBox prefHeight="500.0" prefWidth="700.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <VBox prefHeight="200.0" prefWidth="150.0" spacing="10.0" VBox.vgrow="ALWAYS">
                    <children>
                        <VBox prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
                            <children>
                                <HBox alignment="CENTER" prefHeight="25.0" prefWidth="200.0">
                                    <children>
                                        <Label text="Label"/>
                                        <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                                            <children>
                                                <TextField fx:id="searchField" prefHeight="25.0" prefWidth="100.0"/>
                                                <Button mnemonicParsing="false"/>
                                            </children>
                                        </HBox>
                                    </children>
                                </HBox>
                                <Separator prefWidth="200.0"/>
                                <ScrollPane hbarPolicy="NEVER" VBox.vgrow="ALWAYS">
                                    <content>
                                        <VBox fx:id="actionsVBox" prefHeight="215.0" prefWidth="134.0"/>
                                    </content>
                                </ScrollPane>
                            </children>
                        </VBox>
                        <VBox prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
                            <children>
                                <HBox alignment="CENTER" prefHeight="25.0" prefWidth="200.0">
                                    <children>
                                        <Label text="Label"/>
                                        <HBox alignment="CENTER_RIGHT" prefHeight="50.0" prefWidth="122.0"
                                              HBox.hgrow="ALWAYS">
                                            <children>
                                                <Button fx:id="addSequenceButton" mnemonicParsing="false"
                                                        onAction="#onAddSequence"/>
                                                <Button fx:id="sequenceFolderButton" mnemonicParsing="false"
                                                        onAction="#onOpenSequenceFolder"/>
                                            </children>
                                        </HBox>
                                    </children>
                                </HBox>
                                <Separator prefWidth="200.0"/>
                                <ScrollPane hbarPolicy="NEVER" VBox.vgrow="ALWAYS">
                                    <content>
                                        <VBox fx:id="actionSequencesVBox" prefHeight="215.0" prefWidth="134.0"/>
                                    </content>
                                </ScrollPane>
                            </children>
                        </VBox>
                    </children>
                </VBox>
                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
                    <children>
                        <HBox VBox.vgrow="ALWAYS">
                            <children>
                                <HBox prefHeight="100.0" prefWidth="200.0" HBox.hgrow="NEVER"/>
                                <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
                                    <children>
                                        <HBox prefHeight="75.0" prefWidth="200.0" VBox.vgrow="NEVER"/>
                                        <BorderPane VBox.vgrow="ALWAYS">
                                            <top>
                                                <VBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="100.0"
                                                      BorderPane.alignment="CENTER">
                                                    <children>
                                                        <Label fx:id="sequenceNameLabel"/>
                                                        <Label fx:id="sequenceDescriptionLabel"/>
                                                    </children>
                                                    <padding>
                                                        <Insets left="5.0" top="5.0"/>
                                                    </padding>
                                                </VBox>
                                            </top>
                                            <right>
                                                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="25.0"
                                                      spacing="5.0" BorderPane.alignment="CENTER">
                                                    <children>
                                                        <VBox alignment="CENTER">
                                                            <children>
                                                                <Button fx:id="randomizeButton" mnemonicParsing="false"
                                                                        onAction="#onRandomize"/>
                                                                <Button fx:id="actionsClearButton"
                                                                        mnemonicParsing="false"
                                                                        onAction="#onActionsClear"/>
                                                                <Button fx:id="saveSequenceButton"
                                                                        mnemonicParsing="false"
                                                                        onAction="#onSaveSequence"/>
                                                            </children>
                                                        </VBox>
                                                    </children>
                                                </VBox>
                                            </right>
                                            <center>
                                                <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER"
                                                            prefHeight="350.0" prefWidth="450.0">
                                                    <content>
                                                        <VBox fx:id="builderVBox" prefHeight="316.0" prefWidth="284.0"
                                                              VBox.vgrow="ALWAYS"/>
                                                    </content>
                                                </ScrollPane>
                                            </center>
                                        </BorderPane>
                                        <HBox prefHeight="100.0" prefWidth="200.0" VBox.vgrow="NEVER"/>
                                    </children>
                                </VBox>
                                <HBox prefHeight="100.0" prefWidth="200.0" HBox.hgrow="NEVER"/>
                            </children>
                        </HBox>
                    </children>
                </VBox>
                <VBox prefHeight="200.0" prefWidth="150.0">
                    <children>
                        <VBox fx:id="actionSettingsVBox" prefHeight="200.0" prefWidth="100.0">
                            <children>
                                <Label fx:id="actionInFocusLabel"/>
                                <Separator prefWidth="200.0"/>
                                <VBox prefHeight="200.0" prefWidth="100.0">
                                    <children>
                                        <Label text="Time Frame"/>
                                        <Label text="Sets the time frame how long the Action should last"
                                               wrapText="true"/>
                                        <HBox prefHeight="25.0" prefWidth="200.0" spacing="5.0">
                                            <children>
                                                <Label text="Minimum Value:"/>
                                                <Label fx:id="minSliderLabel" text="0 ms"/>
                                            </children>
                                        </HBox>
                                        <Slider fx:id="minSlider" max="10000.0"/>
                                        <HBox prefHeight="25.0" prefWidth="200.0" spacing="5.0">
                                            <children>
                                                <Label text="Maximum Value:"/>
                                                <Label fx:id="maxSliderLabel" text="0 ms"/>
                                            </children>
                                        </HBox>
                                        <Slider fx:id="maxSlider" max="10000.0"/>
                                    </children>
                                </VBox>
                                <Separator prefWidth="200.0"/>
                            </children>
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                        </VBox>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</AnchorPane>
