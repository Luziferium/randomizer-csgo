<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22"
            fx:controller="de.metaphoriker.randomizer.ui.view.controller.RandomizerViewController">
    <children>
        <VBox prefHeight="488.0" prefWidth="688.0" styleClass="randomizer-view" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox alignment="CENTER_RIGHT" prefHeight="20.0" prefWidth="688.0" styleClass="randomizer-settings-button-hbox">
                    <children>
                        <Button mnemonicParsing="false" prefHeight="20" prefWidth="20" styleClass="randomizer-settings-button"/>
                    </children>
                </HBox>
                <BorderPane prefHeight="420.0" prefWidth="350.0" VBox.vgrow="ALWAYS">
                    <center>
                        <VBox prefHeight="420.0" prefWidth="350.0" styleClass="randomizer-logbook"
                              BorderPane.alignment="CENTER">
                            <children>
                                <HBox prefHeight="22.0" prefWidth="350.0" styleClass="logbook-active-sequence">
                                    <children>
                                        <Label fx:id="sequenceNameLabel" text="Sequence Name"
                                               styleClass="logbook-sequence-name"/>
                                    </children>
                                </HBox>
                                <HBox prefHeight="398.0" prefWidth="350.0" VBox.vgrow="ALWAYS">
                                    <children>
                                        <VBox fx:id="actionsVBox" prefHeight="398.0" prefWidth="322.0"
                                              HBox.hgrow="ALWAYS" styleClass="logbook-active-actions"/>
                                        <VBox prefHeight="398.0" prefWidth="28.0" styleClass="logbook-button-vbox">
                                            <children>
                                                <VBox alignment="CENTER" prefHeight="56.0" prefWidth="28.0"
                                                      VBox.vgrow="ALWAYS" styleClass="logbook-buttons">
                                                    <children>
                                                        <Button fx:id="runButton" mnemonicParsing="false"
                                                                onAction="#onRun" styleClass="logbook-run-button"/>
                                                        <Button fx:id="stopButton" mnemonicParsing="false"
                                                                onAction="#onStop" styleClass="logbook-stop-button"/>
                                                    </children>
                                                </VBox>
                                            </children>
                                        </VBox>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </center>
                    <VBox.margin>
                        <Insets bottom="69.0" left="134.0" right="134.0" top="49.0"/>
                    </VBox.margin>
                </BorderPane>
            </children>
        </VBox>
    </children>
</AnchorPane>
