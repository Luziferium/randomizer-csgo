<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="TOP_CENTER" prefHeight="500.0" prefWidth="80.0"
      styleClass="highlighted-vbox" xmlns="http://javafx.com/javafx/22"
      fx:controller="de.metaphoriker.randomizer.ui.view.controller.SidebarViewController">
    <children>
        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
            <children>
                <VBox>
                    <children>
                        <Rectangle fx:id="logoShape" arcHeight="5.0" arcWidth="5.0" fill="DODGERBLUE" height="50.0" stroke="TRANSPARENT" strokeType="INSIDE" width="50.0" />
                    </children>
                    <padding>
                        <Insets left="20.0" right="20.0" top="20.0" />
                    </padding>
                </VBox>
                <Separator prefWidth="200.0" />
                <VBox prefHeight="200.0" prefWidth="100.0" spacing="15.0">
                    <padding>
                        <Insets left="20.0" right="20.0" top="10.0" />
                    </padding>
                    <children>
                        <ToggleButton fx:id="randomizerButton" mnemonicParsing="false" />
                        <ToggleButton fx:id="builderButton" mnemonicParsing="false" />
                    </children>
                </VBox>
            </children>
        </VBox>
        <VBox alignment="BOTTOM_LEFT" prefHeight="200.0" prefWidth="100.0" spacing="10.0" VBox.vgrow="ALWAYS">
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" />
            </padding>
            <children>
                <Button fx:id="websiteButton" mnemonicParsing="false" />
                <Button fx:id="discordButton" mnemonicParsing="false" />
            </children>
        </VBox>
    </children>
</VBox>
